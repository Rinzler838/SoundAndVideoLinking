<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="activity.ctec.soundandvideolinking.SoundActivityTwo"
                android:theme="@android:style/Theme.Leanback.FormWizard">

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/soundSeekBarTwo"
        android:layout_marginBottom="113dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tsfhPicTwo"
        android:layout_alignEnd="@+id/tsfhPicTwo"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;&lt;"
        android:id="@+id/backButtonTwo"
        android:layout_marginTop="33dp"
        android:layout_alignTop="@+id/soundSeekBarTwo"
        android:layout_toLeftOf="@+id/pausePlayButtonTwo"
        android:layout_toStartOf="@+id/pausePlayButtonTwo"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play"
        android:id="@+id/pausePlayButtonTwo"
        android:layout_alignTop="@+id/backButtonTwo"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STOP"
        android:id="@+id/stopButtonTwo"
        android:layout_above="@+id/videoButton"
        android:layout_toRightOf="@+id/pausePlayButtonTwo"
        android:layout_toEndOf="@+id/pausePlayButtonTwo"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/video_button"
        android:id="@+id/videoButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/pausePlayButtonTwo"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tsfhPicTwo"
        android:src="@drawable/tsfhpic"
        android:layout_alignBottom="@+id/soundSeekBarTwo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
